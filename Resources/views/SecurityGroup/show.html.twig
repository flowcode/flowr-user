{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}SecurityGroup - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerCoreBundle:Default:admin_nav.html.twig") }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1><a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans}}</a>
            /
            <a href={{ path('securityGroup') }}>
                {{ '%entity% list'|trans({'%entity%': 'SecurityGroup'}, 'SecurityGroup') }}
            </a>
            /
            {{ '%entity%'|trans({'%entity%': 'SecurityGroup'}, 'SecurityGroup') }}
        </h1>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">

                        <a class="btn btn-link  btn-sm" href="{{ path('securityGroup_edit', {id: securityGroup.id}) }}">
                            {{ 'Edit'|trans({}, 'SecurityGroup') }}
                        </a>
                        <button class="btn btn-link  btn-sm" type="submit">{{ 'Delete'|trans({}, 'SecurityGroup') }}</button>

                    </div>

                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                    <div id="delete_confirm" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h3>{{ 'Confirm delete'|trans({}, 'SecurityGroup') }}</h3>
                                </div>
                                <div class="modal-body">
                                    <p>{{ 'You are about to delete an item'|trans({}, 'SecurityGroup') }}, {{ 'this procedure is irreversible'|trans({}, 'SecurityGroup') }}.</p>
                                    <p>{{ 'Do you want to proceed?'|trans({}, 'SecurityGroup') }}</p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'SecurityGroup') }}</button>
                                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'SecurityGroup') }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Id'|trans({}, 'SecurityGroup')}}</th>
                            <td>{{ securityGroup.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'name'|trans({}, 'SecurityGroup')}}</th>
                            <td>{{ securityGroup.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'assignee'|trans({}, 'SecurityGroup')}}</th>
                            <td>{{ securityGroup.assignee }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
    
    </section>

{% endblock %}
