{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'User'}, 'User') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1><a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans}}</a>
            /
            <a href={{ path('user') }}>
                {{ '%entity% list'|trans({'%entity%': 'User'}, 'User') }}
            </a>
            /
            {{ 'Invite'|trans({'%entity%': 'User'}, 'User') }}
        </h1>
    </section>        
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'Invite'|trans }}</h3>
            </div>
            <div class="box-body">
                {% if error %}
                    <div class="alert alert-danger" role="alert">{{ error.message}}</div>
                {% endif %}
                <div class="col-lg-12">
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                </div>
                <form action="{{ path('user_invite_send') }}" method="post" >

                    <div class="input-group input-group-lg">
                        <span class="input-group-addon" id="sizing-addon1">@</span>
                        <input type="text" class="form-control" name="email" placeholder="Email" aria-describedby="sizing-addon1" value="{{email}}">
                    </div>

                    <p>
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-send"></i> {{ 'send invite'|trans({}, 'User') }}
                        </button>
                    </p>
                </form>
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions">


                </div>

            </div>
        </div>
    </section>
{% endblock %}
