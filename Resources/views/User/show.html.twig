{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}User - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        {% include 'FlowerCoreBundle:Default:admin_nav.html.twig' %}
        <h1><a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans}}</a>
            /
            <a href={{ path('user') }}>
                {{ '%entity% list'|trans({'%entity%': 'User'}, 'User') }}
            </a>
            /
            {{ '%entity%'|trans({'%entity%': 'User'}, 'User') }}
        </h1>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">

                        <a class="btn btn-link  btn-sm" href="{{ path('user_edit', {id: user.id}) }}">
                            {{ 'Edit'|trans({}, 'User') }}
                        </a>
                        <button class="btn btn-link  btn-sm" type="submit">{{ 'Delete'|trans({}, 'User') }}</button>

                    </div>

                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                    <div id="delete_confirm" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h3>{{ 'Confirm delete'|trans({}, 'User') }}</h3>
                                </div>
                                <div class="modal-body">
                                    <p>{{ 'You are about to delete an item'|trans({}, 'User') }}, {{ 'this procedure is irreversible'|trans({}, 'User') }}.</p>
                                    <p>{{ 'Do you want to proceed?'|trans({}, 'User') }}</p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'User') }}</button>
                                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'User') }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Id'|trans({}, 'User')}}</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Firstname'|trans({}, 'User')}}</th>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Lastname'|trans({}, 'User')}}</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Email'|trans({}, 'User')}}</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Username'|trans({}, 'User')}}</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Created'|trans({}, 'User')}}</th>
                            <td>{{ user.created|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Updated'|trans({}, 'User')}}</th>
                            <td>{{ user.updated|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Lastlogin'|trans({}, 'User')}}</th>
                            <td>{{ user.lastLogin|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Enabled'|trans({}, 'User')}}</th>
                            <td>{% if user.enabled %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Groups'|trans({}, 'User')}}</th>
                            <td>
                                {% for group in user.groups %}
                                        {{group.name}},
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>
    
    </section>

{% endblock %}
