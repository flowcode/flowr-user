{% if external %}
    <img src="{{ avatarUrl }}" class="img-circle" alt="{{ user.getHappyName }}" />
{% elseif size == 'small' %}
    <img src="{{ avatarUrl|imagine_filter('user_avatar_small') }}" class="img-circle" alt="{{ user.getHappyName }}" />
{% else %}
    <img src="{{ avatarUrl|imagine_filter('user_avatar_medium') }}" class="img-circle" alt="{{ user.getHappyName }}" />
{% endif %}