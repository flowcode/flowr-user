{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'User'}, 'User') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href={{ path('user') }}>
                {{ '%entity% list'|trans({'%entity%': 'User'}, 'User') }}
            </a>
            /
            {{ 'New %entity%'|trans({'%entity%': 'User'}, 'User') }}
        </h1>
    </section>        
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'User'}, 'User') }}</h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('user_create')}) }}
                    {{ form_widget(form) }}
                    <p>
                        <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'User') }}</button>
                    </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                        
        <div class="btn-group record_actions">


        </div>

            </div>
        </div>
    </section>
{% endblock %}
