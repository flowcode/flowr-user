{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'User'}, 'User') }} - {{ parent() }}{% endblock %}
{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('user_sort', {field: field, type: 'ASC'}) }}">{{ label | trans({},'User')}} <i class="fa fa-sort-down"></i></a>
                {% elseif sort.type == 'ASC' %}
                <a href="{{ path('user_sort', {field: field, type: 'DESC'}) }}">{{ label | trans({},'User')}} <i class="fa fa-sort-up"></i></a>
                {% endif %}
            {% else %}
            <a href="{{ path('user_sort', {field: field, type: 'ASC'}) }}">{{ label | trans({},'User')}} <i class="fa fa-sort"></i></a>
            {% endif %}
        {% endspaceless %}
    {% endmacro %}

{% from _self import thead %}


{% block body %}
    <section class="content-header">
        <h1>
            {{ '%entity% list'|trans({'%entity%': 'User'}, 'User') }}
        </h1>

    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
                <div class="box-tools pull-right">                    
                    <a class="btn btn-default" href={{ path('user_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'User'}, 'User') }}
                    </a>
                    <a class="btn btn-default" href={{ path('user_invite') }}>
                        <i class="fa fa-plus"></i> {{ 'Invite user'|trans({'%entity%': 'User'}, 'User') }}
                    </a>
                </div>
            </div>
            <div class="box-body">    
                <table class="table table-striped table-hover table-bordered records_list">
                    <thead>
                        <tr>
                            <th scope="col">{{ thead('user', 'id', 'Id') }}</th>
                            <th scope="col">{{ thead('user', 'firstname', 'Firstname') }}</th>
                            <th scope="col">{{ thead('user', 'lastname', 'Lastname') }}</th>
                            <th scope="col">{{ thead('user', 'email', 'Email') }}</th>
                            <th scope="col">{{ thead('user', 'username', 'Username') }}</th>
                            <th scope="col">{{ thead('user', 'lastLogin', 'Lastlogin') }}</th>
                            <th scope="col">{{ thead('user', 'enabled', 'Enabled') }}</th>
                            <th scope="col">{{ 'Actions'|trans({}, 'User') }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in paginator %}
                            <tr>
                                <td><a href="{{ path('user_show', {id: user.id}) }}">{{ user.id }}</a></td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.username }}</td>
                                <td>{% if user.lastLogin %}{{ user.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if user.enabled %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-default btn-sm" href="{{ path('user_show', {id: user.id}) }}">
                                            <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'User') }}
                                        </a>
                                        <a class="btn btn-default btn-sm" href="{{ path('user_edit', {id: user.id}) }}">
                                            <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'User') }}
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(paginator) }}
            </div>
            <div class="box-footer">

            </div>

    </section>        

{% endblock %}
