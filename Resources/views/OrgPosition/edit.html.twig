{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'User'}, 'User') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerCoreBundle:Default:admin_nav.html.twig") }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1><a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans }}</a>
            /
            <a href={{ path('user') }}>
                {{ '%entity% list'|trans({'%entity%': 'User'}, 'User') }}
            </a>
            /
            {{ '%entity% edit'|trans({'%entity%': 'User'}, 'User') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn btn-primary" type="submit">{{ 'Edit'|trans({}, 'User') }}</button>
                </p>
                {{ form_end(edit_form) }}
            </div>
            <div class="box-footer">
            </div>
        </div>
    </section>
{% endblock %}


